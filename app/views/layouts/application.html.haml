!!!
%html
  %head
    %title= app_name
    = stylesheet_link_tag    "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
    %meta{ name: :viewport,
      content: "width=device-width,user-scalable=no,maximum-scale=1" }

  %body
    = render "layouts/header"

    %section#main
      = yield

    = render "layouts/footer"
